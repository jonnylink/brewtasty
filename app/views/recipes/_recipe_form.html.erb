<%= form_for @recipe, html: {class: 'long_form'} do |f| %>
  <%= f.text_field :name, placeholder: "Name (required)" %><br />
  <%= f.text_field :batch_size, placeholder: "Batch Size(gal.)", title: "Batch Size in Gallons" %><br />
  <%= f.text_field :boil_size, placeholder: "Boil Size (gal.)", title: "Boil Size in Gallons" %><br />
  <%= f.text_field :boil_time, placeholder: "Boil Time (min.)", title: "Boil Time in Minutes" %><br />
  <%= f.text_field :boil_gravity, placeholder: "Boil Gravity (sg.)", title: "Boil Gravity in SGs" %><br />
  <%= f.text_field :original_gravity, placeholder: "Original Gravity (sg.)", title: "Original Gravity in SGs" %><br />
  <%= f.text_field :final_gravity, placeholder: "Final Gravity (sg.)", title: "Final Gravity in SGs" %><br />
  <%= f.text_field :ferment_temp, placeholder: "Ferment Temp (&deg;F)".html_safe, title: "Ferment Temp in Fahrenheit" %><br />
  <%= f.text_area :notes, placeholder: "Recipe notes..." %><br />

  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.submit id: "submit" %>
<% end %>
