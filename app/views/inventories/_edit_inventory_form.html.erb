<%= form_for @inventory do |f| %>
  <%= f.text_field :amount, placeholder: "Amount", title: "Amount of inventory", value: @inventory.amount %><br />
  <%= f.collection_select :unit_id, Unit.order(:name), :id, :name %>

  <%= f.hidden_field :inventory_id, value: @inventory.id %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.submit id: "submit" %>
<% end %>
