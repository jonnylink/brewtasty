<%= form_for @inventory do |f| %>
  <%= f.collection_select :ingredient_id, Ingredient.where(active: 1).order(:name), :id, :name %>
  <%= f.text_field :amount, placeholder: "Amount", title: "Amount of inventory" %><br />
  <%= f.collection_select :unit_id, Unit.order(:name), :id, :name %>

  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.submit id: "submit" %>
<% end %>
