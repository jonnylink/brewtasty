<!DOCTYPE html>
<html>
  <head>
    <title>BrewTasty</title>
    <%= csrf_meta_tags %>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Oswald|Raleway" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <body>

    <nav>
      <div id="nav_links_left">
        <% if current_user %>
            <%= link_to 'Inventory', inventories_path %> &bull;
        <% end %>
        <%= link_to 'Recipes', recipes_path %> &bull;
        <%= link_to 'Ingredients', ingredients_path %>
        <% if current_user %>
           &bull; <a href="">Brew</a>
        <% end %>
      </div>

      <div id="nav_links_right">
        <!--<%= render 'recipes/search' %> &nbsp;-->
        <%= render 'devise/menu/login_items' %>
      </div>
    </nav>

    <header>
      <h1><i class="fa fa-beer" aria-hidden="true"></i>&nbsp;<%= link_to "TastyBrew", root_path, id: "site_title" %></h1>
    </header>

    <% if flash[:alert] %>
      <div class="flash flash_error">
        <%= flash[:alert] %>
      </div>
    <% elsif flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <div id="page">
      <%= yield %>
    </div>

  </body>
</html>
