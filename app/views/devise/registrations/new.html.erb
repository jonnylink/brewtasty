<div id="content">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.text_field :username, id: "username", placeholder: "username", autofocus: true %>
    </div>

    <div class="field">
      <%= f.email_field :email, id: "email", placeholder: "email" %>
    </div>

    <div class="field">
      <%= f.password_field :password, id: "password", placeholder: "password (#{@minimum_password_length} characters minimum)", autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, id: "password_confirmation", placeholder: "confirm password", autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "sign up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
